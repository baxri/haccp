<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/instabug_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/instabug_pbi_footer"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/instabug_pbi_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_instabug_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_view_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instabug_str_powered_by_instabug"
            android:textColor="?attr/instabug_foreground_color"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>
