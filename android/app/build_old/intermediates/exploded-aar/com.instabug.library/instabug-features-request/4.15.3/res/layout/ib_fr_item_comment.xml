<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ib_fr_details_title_padding_left_right"
    android:paddingRight="@dimen/ib_fr_details_title_padding_left_right"
    android:paddingBottom="@dimen/ib_fr_space_12">

    <com.instabug.library.ui.custom.CircularImageView
        android:id="@+id/instabug_feature_requests_comment_avatar"
        android:layout_width="@dimen/ib_fr_user_avatar"
        android:layout_height="@dimen/ib_fr_user_avatar"
        android:layout_marginRight="@dimen/ib_fr_space_16"
        android:layout_marginTop="6dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/instabug_feature_requests_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/instabug_feature_requests_comment_date"
        android:layout_toRightOf="@+id/instabug_feature_requests_comment_avatar"
        android:textColor="?attr/ib_fr_details_owner"
        android:textSize="15sp"
        tools:src="@tools:sample/lorem" />

    <TextView
        android:id="@+id/instabug_feature_requests_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/instabug_feature_requests_comment_username"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/instabug_feature_requests_comment_username"
        android:layout_marginLeft="@dimen/ib_fr_space_16"
        android:gravity="center_vertical"
        android:textColor="?attr/ib_fr_details_date"
        android:textSize="12sp"
        tools:src="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/instabug_feature_feature_details_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instabug_feature_requests_comment_username"
        android:layout_below="@+id/instabug_feature_requests_comment_username"
        android:layout_marginTop="@dimen/ib_fr_space_8"
        android:lineSpacingMultiplier="1.4"
        android:textColor="?attr/ib_fr_details_subtitle"
        android:textSize="13sp" />

</RelativeLayout>