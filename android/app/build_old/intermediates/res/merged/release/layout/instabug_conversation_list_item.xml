<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversation_list_item_container"
    style="@style/InstabugChatsItemContainer"

    android:background="@null">


    <com.instabug.library.ui.custom.CircularImageView
        android:id="@+id/instabug_message_sender_avatar"
        android:layout_width="@dimen/instabug_chat_item_avatar_size"
        android:layout_height="@dimen/instabug_chat_item_avatar_size"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/instabug_ic_avatar"/>

    <LinearLayout
        android:id="@+id/instabug_conversation_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instabug_txt_message_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:singleLine="true"
                android:textColor="?attr/instabug_message_sender_text_color"
                android:textSize="@dimen/instabug_normal_text_size"
                android:textStyle="bold"
                tools:text="Omar El tawel awe" />

            <TextView
                android:id="@+id/instabug_txt_message_snippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:singleLine="true"
                android:textColor="?attr/instabug_message_snippet_text_color"
                android:textSize="@dimen/instabug_button_text_size"
                tools:text="I have some problem that is annoying me." />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/instabug_txt_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:lines="1"
                android:singleLine="true"
                android:textColor="?attr/instabug_message_date_text_color"
                android:textSize="@dimen/instabug_date_text_size"
                tools:text="Yesterday" />

            <TextView
                android:id="@+id/instabug_unread_messages_count"
                style="@style/InstabugUnreadMessagesCountIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="10sp" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
