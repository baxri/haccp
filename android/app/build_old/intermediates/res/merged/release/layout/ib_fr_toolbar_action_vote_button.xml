<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center">

    <com.instabug.featuresrequest.ui.custom.IbFrRippleView
        android:id="@+id/ib_feature_request_toolbar_vote_action_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/ib_fr_space_8"
        android:layout_marginLeft="@dimen/ib_fr_space_8"
        android:layout_marginRight="@dimen/ib_fr_space_16"
        android:layout_marginTop="@dimen/ib_fr_space_8"
        android:background="@drawable/ib_fr_bg_vote_toolbar"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/ib_fr_space_8"
        app:ib_fr_rv_centered="true"
        app:ib_fr_rv_type="rectangle"
        app:ib_fr_rv_zoom="true">

        <ImageView
            android:id="@+id/ib_toolbar_vote_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ib_fr_ic_vote_arrow_white" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ib_toolbar_vote_count"
            style="@style/IbFrToolbarVoteButton"
            android:layout_marginLeft="@dimen/ib_fr_space_4"
            android:layout_marginRight="@dimen/ib_fr_space_4"
            android:ellipsize="end"
            android:lines="1"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </com.instabug.featuresrequest.ui.custom.IbFrRippleView>
</LinearLayout>