<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ib_fr_toolbar_main"
                style="@style/IbFrToolbarContainer">

    <ImageButton
        android:id="@+id/instabug_btn_toolbar_left"
        style="@style/InstabugTopDialogButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:foreground="?android:selectableItemBackground"
        android:src="@drawable/instabug_ic_close"/>

    <TextView
        android:id="@+id/instabug_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/instabug_btn_toolbar_left"
        android:layout_toRightOf="@+id/instabug_btn_toolbar_left"
        android:ellipsize="end"
        android:gravity="left|start"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/instabug_normal_text_size"/>


    <LinearLayout
        android:id="@+id/ib_toolbar_action_btns_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/instabug_fragment_title"
        android:layout_toRightOf="@+id/instabug_fragment_title"
        android:gravity="center_vertical|end|right"
        android:orientation="horizontal"
        android:paddingEnd="8dp"/>


    <include
        layout="@layout/ib_fr_toolbar_search_layout"
        android:visibility="gone"/>
</RelativeLayout>

