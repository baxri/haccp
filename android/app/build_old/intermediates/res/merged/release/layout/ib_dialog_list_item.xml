<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instabug_prompt_option_container"
    style="@style/InstabugDialogItemContainer"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/instabug_prompt_option_icon"
        style="@style/InstabugDialogItemImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:tint="?attr/instabug_theme_tinting_color" />

    <TextView
        android:id="@+id/instabug_prompt_option_title"
        style="@style/InstabugDialogItemText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/instabug_notification_count"
        style="@style/InstabugNotificationCountIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp" />

</LinearLayout>

