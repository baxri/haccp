<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ib_core_lyt_onboarding_pager_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="48dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/ib_core_img_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/ib_core_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/ib_core_img_onboarding"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="2dp"
        android:textColor="?attr/ib_core_attr_onboarding_color_title"
        android:textSize="20sp"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/ib_core_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_below="@id/ib_core_tv_title"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        android:textColor="?attr/ib_core_attr_onboarding_color_sub_title"
        android:textSize="12sp"
        tools:text="@tools:sample/lorem" />

</RelativeLayout>