<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/feature_request_add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/feature_request_name_email_layout"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/ib_fr_details_title_padding_left_right">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/feature_request_comment_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/feature_request_comment_edittext_layout"
                style="@style/IbFrAddCommentEditText"
                android:hint="@string/add_feature" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/feature_requests_comment_text_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="?attr/ib_fr_add_comment_edit_text_underline_color" />
    </LinearLayout>


    <TextView
        android:id="@+id/feature_requests_add_comment_email_error"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_above="@+id/feature_request_name_email_layout"
        android:background="@color/ib_fr_add_comment_error"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ib_fr_space_16"
        android:paddingRight="@dimen/ib_fr_space_16"
        android:text="@string/feature_request_str_add_comment_valid_email"
        android:textColor="@color/ib_fr_white"
        android:textSize="13sp"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/feature_request_name_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/feature_request_email_disclaimer_layout"
        android:padding="@dimen/ib_fr_details_title_padding_left_right">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/feature_request_name_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/feature_request_name_edittext_layout"
                    style="@style/IbFrAddCommentEditText"
                    android:hint="@string/feature_requests_new_name"
                    android:lines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/feature_requests_name_text_underline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="?attr/ib_fr_add_comment_edit_text_underline_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/feature_request_email_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/feature_request_email_edittext_layout"
                    style="@style/IbFrAddCommentEditText"
                    android:hint="@string/feature_requests_new_email" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/feature_requests_email_text_underline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="?attr/ib_fr_add_comment_edit_text_underline_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feature_request_email_disclaimer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ib_fr_email_disclaimer_top_margin"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feature_request_email_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ib_fr_email_disclaimer_height"
            android:background="?attr/ib_fr_str_add_comment_disclaimer"
            android:gravity="center"
            android:paddingBottom="@dimen/ib_fr_space_4"
            android:paddingLeft="@dimen/ib_fr_space_16"
            android:paddingRight="@dimen/ib_fr_space_16"
            android:paddingTop="@dimen/ib_fr_space_4"
            android:text="@string/feature_request_str_add_comment_disclaimer"
            android:textColor="@color/ib_fr_str_add_comment_disclaimer_txt_color"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>