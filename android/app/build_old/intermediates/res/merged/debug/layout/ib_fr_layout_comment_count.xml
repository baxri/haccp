<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/ib_fr_details_title_padding_left_right"
    android:paddingRight="@dimen/ib_fr_details_title_padding_left_right">

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ib_fr_shape_comment" />

    <TextView
        android:id="@+id/ib_features_request_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ib_fr_space_4"
        android:layout_marginRight="@dimen/ib_fr_space_4"
        android:text="@string/feature_request_comments_count"
        android:textColor="?attr/ib_fr_details_comments_tv_color"
        android:textSize="12sp" />
</LinearLayout>