<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/ib_fr_space_20"
    android:paddingLeft="@dimen/ib_fr_details_title_padding_left_right"
    android:paddingRight="@dimen/ib_fr_details_title_padding_left_right"
    android:paddingTop="@dimen/ib_fr_space_20">

    <TextView
        android:id="@+id/ib_fr_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/ib_fr_details_title"
        android:textSize="22sp"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/ib_fr_tv_feature_details_desc"
        android:layout_width="match_parent"
        android:lineSpacingMultiplier="1.4"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ib_fr_space_16"
        android:textColor="?attr/ib_fr_details_subtitle"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ib_fr_space_24"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/instabug_txt_feature_request_status"
            style="@style/IbFrFeatureStatus"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/ib_btn_fr_vote"
            android:layout_margin="0dp"
            android:paddingTop="1dp"
            android:paddingBottom="0dp"
            tools:text="opened" />

        <TextView
            android:id="@+id/ib_txt_feature_request_owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ib_fr_space_16"
            android:layout_marginRight="@dimen/ib_fr_space_16"
            android:layout_weight="1"
            android:textColor="?attr/ib_fr_details_owner"
            android:textSize="12sp"
            tools:text="By Zak El-Zoghbi" />

        <TextView
            android:id="@+id/ib_txt_feature_request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/ib_fr_details_date"
            android:textSize="12sp"
            tools:text="3 days" />
    </LinearLayout>

    <include
        layout="@layout/ib_fr_view_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ib_fr_space_24" />

</LinearLayout>