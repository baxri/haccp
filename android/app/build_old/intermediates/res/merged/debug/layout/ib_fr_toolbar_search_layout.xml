<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ib_fr_search_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:focusableInTouchMode="true"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/ib_fr_space_16"
              android:paddingRight="@dimen/ib_fr_space_16">

    <LinearLayout
        android:id="@+id/ib_fr_search_field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:background="@drawable/ib_fr_bg_search_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ib_fr_space_12"
        android:paddingRight="@dimen/ib_fr_space_12">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ib_fr_ic_search"/>

        <EditText
            android:id="@+id/ib_fr_search_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ib_fr_space_4"
            android:layout_marginRight="@dimen/ib_fr_space_4"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:hint="@string/ib_feature_rq_str_search"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/ib_fr_shape_cursor_color_white"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/ib_fr_search_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instabug_ic_close"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/ib_fr_search_progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ib_fr_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ib_fr_space_16"
        android:layout_marginStart="@dimen/ib_fr_space_16"
        android:text="@string/instabug_str_cancel"
        android:textColor="@android:color/white"/>
</LinearLayout>