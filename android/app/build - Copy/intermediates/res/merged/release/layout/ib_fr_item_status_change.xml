<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/ib_fr_space_8"
    android:paddingLeft="@dimen/ib_fr_space_24"
    android:paddingRight="@dimen/ib_fr_space_24"
    android:paddingTop="@dimen/ib_fr_space_8">

    <View
        android:layout_width="26dp"
        android:layout_height="1dp"
        android:background="?attr/ib_fr_details_comments_status_separator_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/features_request_status_change_txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/changed_to_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_request_status_changed_to"
                android:textColor="@color/ib_fr_details_comments_status_change_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/instabug_feature_request_new_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_request_status_changed_to"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/instabug_feature_request_new_status_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/features_request_status_change_txt_layout"
            android:gravity="center"
            android:textColor="@color/ib_fr_details_comments_status_change_light"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="26dp"
        android:layout_height="1dp"
        android:background="?attr/ib_fr_details_comments_status_separator_color" />

</LinearLayout>