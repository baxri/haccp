<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/instabug_background_color"
                android:orientation="vertical"
                android:paddingBottom="@dimen/instabug_container_padding"
                android:paddingLeft="@dimen/instabug_container_padding"
                android:paddingRight="@dimen/instabug_container_padding">

    <LinearLayout
        android:id="@+id/under"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/malertTitle"
            style="@style/InstabugDialogItemText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/instabug_background_color"
            android:drawablePadding="2dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvMessage"
            style="@style/InstabugDialogItemText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="5dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/under"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:text="@string/instabug_alert_dialog_no"
            />

        <TextView
            android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="3dp"
            android:paddingStart="15dp"
            android:text="@string/instabug_alert_dialog_yes"/>

    </LinearLayout>


</RelativeLayout>